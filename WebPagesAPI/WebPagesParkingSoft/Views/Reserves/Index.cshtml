@model IEnumerable<API_AppParkingSoft.DAL.Entities.Reserve>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />

<div class="row">
    <div class="col-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-primary text-center">Reservas Activas</h3>
            </div>
        </div>

        <div class="panel-body">
            <table class="table table-hover table-responsive table-striped" id="ReservasTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NameUser)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LicensePlate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.activeVehicle)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NameUser)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LicensePlate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.activeVehicle)
                            </td>
                            @* <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                            </td> *@
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@SectionWriters Scripts{
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(funtion(){
        $('ReservasTable').DataTable({
            "languaje": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "aLengthMenu": [
                [5, 25, 50, 100, 200, -1],
                [5, 25, 50, 100, 200, "Todos"]
            ]
        })
    })
</script>
 }